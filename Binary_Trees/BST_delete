'''Used the previous Node and BST class build and added the delete function for
the leaf case, 1 child case, 2 children cases.
'''
class Node:
    def __init__(self, key):
        self.key = key
        self.left = None
        self.right = None


class BST:
    def __init__(self):
        self.root = None

    # --- Insert a key into the BST ---
    def insert(self, key):
        if self.root is None:
            self.root = Node(key)
        else:
            self._insert(self.root, key)

    def _insert(self, root, key):
        if key < root.key:
            if root.left is None:
                root.left = Node(key)
            else:
                self._insert(root.left, key)
        elif key > root.key:
            if root.right is None:
                root.right = Node(key)
            else:
                self._insert(root.right, key)
        # Duplicates ignored

    # --- Delete a key from the BST ---
    def delete(self, key):
        self.root = self._delete(self.root, key)

    def _delete(self, root, key):
        if root is None:
            return None

        # 1. Search for the node
        if key < root.key:
            root.left = self._delete(root.left, key)
        elif key > root.key:
            root.right = self._delete(root.right, key)
        else:
            # Node found â€” handle the three cases

            # Case 1: No children
            if root.left is None and root.right is None:
                return None

            # Case 2: One child
            if root.left is None:
                return root.right
            elif root.right is None:
                return root.left

            # Case 3: Two children
            # Find inorder successor (smallest in right subtree)
            successor = self._min_value_node(root.right)
            root.key = successor.key
            # Delete the inorder successor
            root.right = self._delete(root.right, successor.key)

        return root

    def _min_value_node(self, node):
        current = node
        while current.left:
            current = current.left
        return current

    # --- Inorder Traversal (sorted order) ---
    def inorder(self):
        def _inorder(node):
            if node:
                _inorder(node.left)
                print(node.key, end=" ")
                _inorder(node.right)
        _inorder(self.root)
        print()


# Example Usage
if __name__ == "__main__":
    bst = BST()
    for key in [50, 30, 70, 20, 40, 60, 80]:
        bst.insert(key)

    print("Inorder before deletion:")
    bst.inorder()

    # Delete a leaf node
    bst.delete(20)

    # Delete a node with one child
    bst.delete(30)

    # Delete a node with two children
    bst.delete(50)

    print("Inorder after deletion:")
    bst.inorder()
