'''I first created a class and used it to generate the rescursive traversals
and iterave traversals. Both will have inorder, preorder, and postorder
functions.
'''
# Define a class for the nodes of the tree
class Node:
    def __init__(self, val):
        self.val = val
        self.left = None
        self.right = None


# Recursive Traversals
def inorder_recursive(root):
    if root:
        inorder_recursive(root.left)
        print(root.val, end=" ")
        inorder_recursive(root.right)


def preorder_recursive(root):
    if root:
        print(root.val, end=" ")
        preorder_recursive(root.left)
        preorder_recursive(root.right)


def postorder_recursive(root):
    if root:
        postorder_recursive(root.left)
        postorder_recursive(root.right)
        print(root.val, end=" ")


# Iterative Traversals
def inorder_iterative(root):
    stack = []
    curr = root
    while stack or curr:
        while curr:
            stack.append(curr)
            curr = curr.left
        curr = stack.pop()
        print(curr.val, end=" ")
        curr = curr.right


def preorder_iterative(root):
    if not root:
        return
    stack = [root]
    while stack:
        node = stack.pop()
        print(node.val, end=" ")
        if node.right:
            stack.append(node.right)
        if node.left:
            stack.append(node.left)


def postorder_iterative(root):
    if not root:
        return
    stack1, stack2 = [root], []
    while stack1:
        node = stack1.pop()
        stack2.append(node)
        if node.left:
            stack1.append(node.left)
        if node.right:
            stack1.append(node.right)
    while stack2:
        print(stack2.pop().val, end=" ")


#Test

#First build the tree
if __name__ == "__main__":
    A = Node('A')
    B = Node('B')
    C = Node('C')
    D = Node('D')
    E = Node('E')
    F = Node('F')

    A.left, A.right = B, C
    B.left, B.right = D, E
    C.right = F

    print("Inorder (Recursive): ", end="")
    inorder_recursive(A)
    print("\nPreorder (Recursive): ", end="")
    preorder_recursive(A)
    print("\nPostorder (Recursive): ", end="")
    postorder_recursive(A)

    print("\n\nInorder (Iterative): ", end="")
    inorder_iterative(A)
    print("\nPreorder (Iterative): ", end="")
    preorder_iterative(A)
    print("\nPostorder (Iterative): ", end="")
    postorder_iterative(A)
